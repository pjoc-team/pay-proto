{
  "swagger": "2.0",
  "info": {
    "title": "pay_settlement.proto",
    "version": "version not set"
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/notify": {
      "post": {
        "operationId": "NotifyOrder",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/paySettlementResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/paySettlementPayOrder"
            }
          }
        ],
        "tags": [
          "SettlementGateway"
        ]
      }
    },
    "/v1/settlement": {
      "post": {
        "operationId": "ProcessOrderSuccess",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/paySettlementResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/paySettlementPayOrder"
            }
          }
        ],
        "tags": [
          "SettlementGateway"
        ]
      }
    },
    "/v1/settlement/{gateway_order_id}": {
      "post": {
        "operationId": "ProcessSuccess",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/paySettlementResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "gateway_order_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/paySettlementRequest"
            }
          }
        ],
        "tags": [
          "SettlementGateway"
        ]
      }
    }
  },
  "definitions": {
    "payBasePayOrder": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "out_trade_no": {
          "type": "string",
          "title": "业务订单号"
        },
        "channel_account": {
          "type": "string",
          "title": "渠道账号"
        },
        "channel_order_id": {
          "type": "string",
          "title": "渠道订单号"
        },
        "gateway_order_id": {
          "type": "string",
          "title": "网关订单号"
        },
        "pay_amount": {
          "type": "integer",
          "format": "int64",
          "title": "支付金额（分）"
        },
        "currency": {
          "type": "string",
          "title": "币种"
        },
        "notify_url": {
          "type": "string",
          "title": "接收通知的地址，不能带参数（即：不能包含问号）"
        },
        "return_url": {
          "type": "string",
          "title": "支付后跳转的前端地址"
        },
        "app_id": {
          "type": "string",
          "title": "系统给商户分配的app_id"
        },
        "sign_type": {
          "type": "string",
          "title": "加密方法，rsa和md5，默认rsa"
        },
        "order_time": {
          "type": "string",
          "title": "下单时间"
        },
        "request_time": {
          "type": "string",
          "title": "请求到网关的时间"
        },
        "create_date": {
          "type": "string",
          "title": "订单创建日期"
        },
        "user_ip": {
          "type": "string",
          "title": "发起支付的用户ip"
        },
        "user_id": {
          "type": "string",
          "title": "用户在业务系统的id"
        },
        "payer_account": {
          "type": "string",
          "title": "支付者账号，可选"
        },
        "product_id": {
          "type": "string",
          "title": "产品id"
        },
        "product_name": {
          "type": "string",
          "title": "商品名称"
        },
        "product_describe": {
          "type": "string",
          "title": "商品描述"
        },
        "callback_json": {
          "type": "string",
          "title": "回调业务系统时需要带上的字符串"
        },
        "ext_json": {
          "type": "string",
          "title": "扩展json"
        },
        "channel_response_json": {
          "type": "string",
          "title": "渠道返回的json"
        },
        "error_message": {
          "type": "string",
          "title": "下单错误信息"
        },
        "channel_id": {
          "type": "string",
          "title": "渠道id（非必须），如果未指定method，系统会根据method来找到可用的channel_id"
        },
        "method": {
          "type": "string"
        },
        "remark": {
          "type": "string"
        }
      }
    },
    "payPayOrder": {
      "type": "object",
      "properties": {
        "base_pay_order": {
          "$ref": "#/definitions/payBasePayOrder"
        },
        "order_status": {
          "type": "string"
        }
      }
    },
    "payReturnResult": {
      "type": "object",
      "properties": {
        "code": {
          "$ref": "#/definitions/payReturnResultCode"
        },
        "message": {
          "type": "string"
        },
        "describe": {
          "type": "string"
        }
      }
    },
    "payReturnResultCode": {
      "type": "string",
      "enum": [
        "CODE_SUCCESS",
        "CODE_PARAMS_ERROR",
        "CODE_CHECK_SIGN_ERROR",
        "CODE_SYSTEM_ERROR"
      ],
      "default": "CODE_SUCCESS",
      "title": "- CODE_PARAMS_ERROR: Params error start--------------------------------\nParams validate error\n - CODE_CHECK_SIGN_ERROR: Check sign error\n - CODE_SYSTEM_ERROR: --------------------------------"
    },
    "paySettlementPayOrder": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "order": {
          "$ref": "#/definitions/payPayOrder"
        }
      }
    },
    "paySettlementRequest": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "gateway_order_id": {
          "type": "string"
        }
      }
    },
    "paySettlementResponse": {
      "type": "object",
      "properties": {
        "result": {
          "$ref": "#/definitions/payReturnResult"
        }
      }
    }
  }
}
